{{> header}}
    <div class="main-container">
        <div class="left">
            <img class="img-lg" src="https://ugross.gallerycdn.vsassets.io/extensions/ugross/vscode-react-snippets/1.3.0/1519481679046/Microsoft.VisualStudio.Services.Icons.Default"
            />
            <h1 class="display-3">Hands-On
                <span class="highlight">REACT JS</span>
            </h1>
            <span id="form">
                <h3 class="display-4" style="font-size: 20px;">{{message}}</h3>
                <input class="search form-control" type="text" name="reg" autofocus placeholder="Registration" autocomplete="off" />
            </span>
            <div>
                <center>
                    <br>
                    <a href="/">
                        <button class="btn btn-default" id="submit" type="submit">
                            Add Entry
                        </button>
                    </a>
                    <a href="/all/email" target="_blank">
                        <button class="btn btn-default" id="submit" type="submit">
                            All Emails
                        </button>
                    </a>
                    <a href="/all/phone" target="_blank">
                        <button class="btn btn-default" id="submit" type="submit">
                            All Phone
                        </button>
                    </a>
                </center>
            </div>
            <div style="padding-left: 20px;">
                <p>Total Students Registered:
                    <b>
                        <span id="rS">0</span>
                    </b>
                </p>
                <p>Total Paid:
                    <b>
                        <span id="tP">0</span>
                    </b>
                </p>
                <p>Total Unpaid:
                    <b>
                        <span id="tU">0</span>
                    </b>
                </p>
            </div>
        </div>
        <div class="table-div" style="border-left: 1px solid lightgrey;">
            <table class="table">
                <thead>
                    <th>Name</th>
                    <th>Reg #</th>
                    <th>Payment Status</th>
                    <th>Information</th>
                    <th>Joined</th>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
    <script src="/scripts/registration.js"></script>
{{> footer}}